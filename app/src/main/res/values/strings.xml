    <string name="tomorrow">Tomorrow</string>

    <!-- Date format for displaying day of week and date (i.e. Mon Jun 1) [CHAR LIMIT=20] -->
    <string name="format_full_friendly_date">
          <xliff:g id="day_of_week">%1$s</xliff:g>, <xliff:g id="date">%2$s</xliff:g>
    </string>
    <string name="format_temperature">
        <xliff:g id="temp">%1.0f</xliff:g>\u00B0</string>
    <string name="format_pressure">
        <xliff:g id="pressure">PRESSURE: %1.0f</xliff:g>hPa</string>
    <string name="format_windspeed">
        <xliff:g id="windspeed">WIND: %1.0f</xliff:g>km/h</string>
    <string name="format_humudity">
        <xliff:g id="humidity">HUMIDITY: %1.0f</xliff:g>\u0025</string>
    <string name="humidity_na">HUMIDITY: N/A</string>
    <string name="wind">Wind:</string>
    <string name="pressure">Pressure:</string>


